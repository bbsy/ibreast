<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mine_manager_linear_head"
        style="@style/head_linearlayout"
        android:background="#F8F8F8" >

        <ImageView
            android:id="@+id/mine_manager_iv_back"
            style="@style/returnback"
            android:contentDescription="@string/appointment_title" />

        <TextView
            android:id="@+id/mine_manager_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mine_manager"
            android:textColor="#5F5D5F"
            android:textSize="16sp" />
    </RelativeLayout>
	
    <ListView 
        android:id="@+id/mine_manager_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mine_manager_linear_head"/>
</RelativeLayout>